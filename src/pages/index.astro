---
import '../styles/global.css'
import Header from '../components/Header.astro';
import Services from '../components/Services.tsx';
import Layout from '../layouts/Layout.astro';
import heroImg from '../assets/edited.png';
---

<Layout>
  <Header/>
  <section class="pt-32 pb-24 bg-gradient-to-br from-gray-50 to-indigo-50">
    <div class="container mx-auto px-6">
      <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-1/2 md:pr-12">
          <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
            We Build <span class="text-indigo-600">Digital Experiences</span> That Transform Businesses
          </h1>
          <p class="text-lg text-gray-600 mb-8">
          Webverse helps ambitious businesses like yours generate more profits by crafting stunning websites and digital products that convert visitors into customers.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#contact" class="px-8 py-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-center font-medium transition-colors">
              Start Your Project
            </a>
            <a href="#work" class="px-8 py-4 border border-gray-300 hover:border-indigo-600 hover:text-indigo-600 rounded-lg text-center font-medium transition-colors">
              View Our Work
            </a>
          </div>
        </div>
        <div class="hidden md:block lg:ml-[10rem] md:w-1/2 lg:w-1/3 mt-12 md:mt-0">
          <img src={heroImg.src} alt="Web Development">
        </div>
      </div>
    </div>
  </section>

   <!-- Services Section -->
  <section id="services" class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <p class="text-indigo-600 font-medium mb-2">What We Do</p>
        <h2 class="text-3xl font-bold mb-4">Our Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          We offer comprehensive web solutions tailored to your unique business needs,
          helping you establish a powerful online presence.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <Services client:visible />
      </div>
    </div>
  </section>

  <footer class="grid place-items-center bg-gray-50 py-8 w-full">
    <div class="w-fit text-gray-500 text-sm">
      Copyright (c) {(new Date).getFullYear()} Webverse. All Rights Reserved.
    </div>
  </footer>
</Layout>
